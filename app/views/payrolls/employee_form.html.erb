  <div class="card">
    <div class="card-content">
      <span class="card-title">Get Employee Payroll</span>
        <br />
        <%= form_with url: employee_payroll_path, method: 'get', local: true do |f| %>
        <div class="control-group">
          <%= f.label :id, "Employee" %>
          <div class="controls">
            <%= select_tag "employee_id", options_from_collection_for_select(@employees, :id, :proper_name) %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :start_date %>
          <div class="controls">
            <%= f.date_field :start_date %>
          </div>
        </div>

        <div class="control-group">
          <%= f.label :end_date %>
          <div class="controls">
            <%= f.date_field :end_date %>
          </div>
        </div>
        
        <div class="actions"><%= f.submit "Get Payroll" %></div>
      <% end %>
    </div>
  </div>


