<div class="card">
    <div class="card-content">
        <span class="card-title">Get Store Payroll</span>
        <br />
        <%= form_with url: store_payroll_path, method: 'get', local: true do |f| %>
        <% if current_user && current_user.admin_role? %>
        <div class="control-group">
            <%= f.label :id, "Store" %>
            <div class="controls">
            <%= select_tag "store_id", options_from_collection_for_select(@stores, :id, :name) %>
            </div>
        </div>
        <% else %> 
        <div class="control-group">
            <%= f.label :id, "Store" %>
            <br />
            <div class="controls">
           
            <%= "#{@stores.name}" %>
            <br /><br />
            </div>
        <% end %>

        <div class="control-group">
            <%= f.label :start_date %>
            <div class="controls">
            <%= f.date_field :start_date %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :end_date %>
            <div class="controls">
            <%= f.date_field :end_date %>
            </div>
        </div>
        
        <div class="actions"><%= f.submit "Get Payroll" %></div>
        <% end %>
    </div>
</div>
